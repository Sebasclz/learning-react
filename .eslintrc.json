{
  "globals": {
    "localStorage": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2024,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "**/*.html"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "no-multi-spaces": [
      "error"
    ]
  }
}